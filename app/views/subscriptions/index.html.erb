
<%@profiles.each do |profile|%>
 <%if profile.user!= current_user && !Subscription.exists?('subscription_id' => profile.user.id)%>
<div class="card" style="width:30%;float:left;margin:4px;" >
 <div class="card-header">
      <strong>Name:</strong>
     <%= profile.name %>
    
 </div>
 <div class="card-body">
  <div id="<%= dom_id profile %>">
   <%= image_tag(profile.profile_photo,class:"rounded mx-auto ",style: 'height:150px;width:150px;') %>
   <br/><br/>
   
   <div class="btn-group">

   <%= form_with(model: @subscription) do |form| %>
  <% if @subscription.errors.any? %>
    
      <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
        <% @subscription.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    
    <%= form.number_field :subscription_id ,value:profile.user.id ,type: :hidden%>
 
    <%= form.text_field :user_id ,value:current_user.id ,type: :hidden%>
  </div>

  <div>
    <%= form.submit value:"subscribe",class:"btn btn-danger btn-sm" %>
  </div>
 <% end %>
  &nbsp;

   <button class="btn btn-sm">Follower :
    <%= profile.user.subscriptions.count%>
    </button>
    &nbsp;
    <%= link_to "show more", profile_path(profile) ,class:"btn btn-primary btn-sm"%>
  </div> 

   </div> 
  </div>
  </div>  
 </div>
 <%end%>
<%end%>

